{
  "manifest_version": 3,
  "name": "ChatGPT User Message Navigator",
  "description": "Shows a collapsible list of user messages on the right side and allows scrolling to them.",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/gptMsgNavigator.png",
    "48": "icons/gptMsgNavigator.png",
    "128": "icons/gptMsgNavigator.png"
  },
  "action": {
    "default_title": "Toggle Message Navigator"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
        ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fontawesome/css/all.min.css",
        "fontawesome/webfonts/fa-solid-900.woff2"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ]
}
